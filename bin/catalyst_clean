#!/bin/bash -login
#set -x
#
echo ""
#
TMP_LCCDIR=$LCCDIR
if [[ "$TMP_LCCDIR" == "" ]]; then
   TMP_LCCDIR=/opt/catalina	
fi
#
if [[ ! -e $TMP_LCCDIR/bin/catalina_env ]]; then
   echo ""
   echo "ERROR: Catalina does not appear to be installed in $TMP_LCCDIR"
   echo "";
   echo "Set the environment variable LCCDIR to where Catalina is installed.";
   echo "";
   exit
fi   
#
echo ""
echo "Cleaning Catalyst directories ..."
echo ""
#
rm -f "$TMP_LCCDIR/demos/catalyst/bin/"*
pushd $TMP_LCCDIR/demos/catalyst/core
rm -f *.bin
rm -f *.binary
rm -f *.eeprom 
rm -f *.lst 
rm -f *.debug 
rm -f *.dbg
popd
pushd $TMP_LCCDIR/demos/catalyst/demo
rm -f *.bin
rm -f *.binary
rm -f *.eeprom 
rm -f *.lst 
rm -f *.debug 
rm -f *.dbg
popd
pushd $TMP_LCCDIR/demos/catalyst/dumbo_basic
rm -f *.bin
rm -f *.binary
rm -f *.eeprom 
rm -f *.lst 
rm -f *.debug 
rm -f *.dbg
popd
pushd $TMP_LCCDIR/demos/catalyst/jzip
rm -f *.bin
rm -f *.binary
rm -f *.eeprom 
rm -f *.lst 
rm -f *.debug 
rm -f *.dbg
popd
pushd $TMP_LCCDIR/demos/catalyst/lua-5.1.4/src
rm -f *.bin
rm -f liblua/*.*
rm -f *.binary
rm -f *.eeprom 
rm -f *.lst 
rm -f *.debug 
rm -f *.dbg
popd
pushd $TMP_LCCDIR/demos/catalyst/pascal/p5_c
rm -f *.bin
rm -f *.binary
rm -f *.eeprom 
rm -f *.lst 
rm -f *.debug 
rm -f *.dbg
popd
pushd $TMP_LCCDIR/demos/catalyst/sst
rm -f *.bin
rm -f *.binary
rm -f *.eeprom 
rm -f *.lst 
rm -f *.debug 
rm -f *.dbg
popd
pushd $TMP_LCCDIR/demos/catalyst/xvi-2.51/src
rm -f *.bin
rm -f *.binary
rm -f *.eeprom 
rm -f *.lst 
rm -f *.debug 
rm -f *.dbg
popd
echo ""
echo "... done cleaning"
echo ""
