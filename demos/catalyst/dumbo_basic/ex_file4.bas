10 OPEN "R", #1, "INFOFILE.DAT", 32
20 FIELD #1, 20 AS N$, 4 AS A$, 8 AS P$
30 R = LOF(1)/32
40 PRINT : PRINT R; "RECORDS IN FILE" : PRINT
50 IF R > 0 THEN PRINT "RECORD NUM  NAME                 AMOUNT   PHONE   " :
   IF R > 0 THEN PRINT "----------- -------------------- -------- --------"
60 FOR I = 1 TO R
70 GET #1
80 PRINT "RECORD:"; : PRINT USING "###";I; " ";
90 PRINT N$; " "; : PRINT USING "$$###.##"; CVS(A$); : PRINT " ";P$
100 NEXT I
110 PRINT

200 INPUT "RECORD # TO UPDATE (0 TO FINISH)"; REC%
210 IF REC% <= 0 THEN CLOSE #1 : STOP
220 INPUT "NAME"; X$
230 INPUT "AMOUNT"; AMT
240 INPUT "PHONE"; TEL$: PRINT
250 LSET N$=X$
260 LSET A$=MKS$(AMT)
270 LSET P$=TEL$
280 PUT #1, REC%
290 GOTO 200
