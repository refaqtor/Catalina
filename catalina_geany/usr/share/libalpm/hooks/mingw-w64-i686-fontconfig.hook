[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Operation = Remove
Target = mingw32/share/fonts/*
Target = mingw32/etc/fonts/conf.d/*
Target = mingw32/share/fontconfig/conf.avail/*
Target = mingw32/share/fontconfig/conf.default/*

[Action]
Description = Updating fontconfig cache...
When = PostTransaction
Exec = /mingw32/bin/fc-cache -s